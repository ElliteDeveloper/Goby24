<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_gradient_stroke"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="5dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_svitem_ride_detail_tourist_package_tourist_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            app:civ_border_color="@color/cyan_light"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/tv_svitem_ride_detail_tourist_package_tourist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="A"
            android:textColor="@color/txtclr_gray"
            android:textSize="@dimen/fontsize_small" />

        <TextView
            android:id="@+id/tv_svitem_ride_detail_tourist_package_tourist_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="A"
            android:textColor="@color/txtclr_gray"
            android:textSize="@dimen/fontsize_small" />

        <TextView
            android:id="@+id/tv_svitem_ride_detail_tourist_package_tourist_contact_tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:background="@drawable/bg_cyan_selector"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:layout_margin="10dp"
            android:text="@string/action_contact_traveller"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>
</RelativeLayout>