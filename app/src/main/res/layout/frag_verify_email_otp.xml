<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="30dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_frag_verify_email_otp_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/left_arrow_black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_logo_height"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_frag_verify_email_otp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:text="@string/verify_email_otp_title"
            android:textColor="@color/txtclr_black"
            android:textSize="@dimen/fontsize_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_frag_verify_email_otp_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:text="@string/verify_email_opt_msg"
            android:textAlignment="center"
            android:textColor="@color/txtclr_gray"
            android:textSize="@dimen/fontsize_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_frag_verify_email_otp1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_otp_gray_light_normal"
                android:inputType="number"
                android:maxLength="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/txtclr_black"
                android:textSize="@dimen/fontsize_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_frag_verify_email_otp2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_otp_gray_light_normal"
                android:inputType="number"
                android:maxLength="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/txtclr_black"
                android:textSize="@dimen/fontsize_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_frag_verify_email_otp3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_otp_gray_light_normal"
                android:inputType="number"
                android:maxLength="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/txtclr_black"
                android:textSize="@dimen/fontsize_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_frag_verify_email_otp4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_otp_gray_light_normal"
                android:inputType="number"
                android:maxLength="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/txtclr_black"
                android:textSize="@dimen/fontsize_large"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_frag_verify_email_otp_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:text="00:10:00"
            android:textAlignment="center"
            android:textColor="@color/cyan_light"
            android:textSize="@dimen/fontsize_large" />

        <TextView
            android:id="@+id/tv_frag_verify_email_otp_resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:text="@string/verify_email_opt_resend_otp"
            android:textAlignment="center"
            android:textColor="@color/cyan_light"
            android:textSize="@dimen/fontsize_normal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_frag_verify_email_otp_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:background="@drawable/bg_cyan_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/verify_email_opt_resend_send"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontsize_normal" />


    </LinearLayout>
</RelativeLayout>