<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="30dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_logo_height"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_frag_forgot_pwd_change_pwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:text="@string/forgot_pwd_title"
            android:textColor="@color/txtclr_black"
            android:textSize="@dimen/fontsize_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_frag_forgot_pwd_change_pwd_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:text="@string/change_pwd_title"
            android:textColor="@color/txtclr_black"
            android:textSize="@dimen/fontsize_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:background="@drawable/bg_editable_gray_light_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/ed_frag_forgot_pwd_change_pwd_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/hint_pwd"
                android:inputType="textPassword"
                android:textColor="@color/txtclr_black"
                android:singleLine="true"
                android:textColorHint="@color/txtclr_placeholder_light_gray"
                android:textSize="@dimen/fontsize_small" />

            <ImageView
                android:id="@+id/iv_frag_forgot_pwd_change_pwd_new"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/show_password" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:background="@drawable/bg_editable_gray_light_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/ed_frag_forgot_pwd_change_pwd_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/confirm_pwd"
                android:inputType="textPassword"
                android:textColor="@color/txtclr_black"
                android:singleLine="true"
                android:textColorHint="@color/txtclr_placeholder_light_gray"
                android:textSize="@dimen/fontsize_small" />

            <ImageView
                android:id="@+id/iv_frag_forgot_pwd_change_pwd_confirm"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/show_password" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_frag_forgot_pwd_change_pwd_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:background="@drawable/bg_cyan_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/reset_pwd"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>
</RelativeLayout>