<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_gvitem_tourist_package_offer_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_gvitem_tourist_package_image_root"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gvitem_tourist_package"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_tourist_package"
                app:riv_border_color="#333333"
                app:riv_corner_radius="25dp"
                app:riv_mutate_background="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gvitem_tourist_package_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="#33000000"
                app:riv_border_color="#333333"
                app:riv_corner_radius="25dp"
                app:riv_mutate_background="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_calendar_white" />

                <TextView
                    android:id="@+id/tv_gvitem_tourist_package_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontsize_normal" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/rl_gvitem_tourist_package_image_root"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/rounded_gray_border_bg_white"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/tv_gvitem_tourist_package_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/txtclr_black"
                android:textSize="@dimen/fontsize_normal"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gvitem_tourist_package_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/badge_yellow"
                    android:textSize="@dimen/fontsize_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gvitem_tourist_package_rider_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/cyan_light"
                    android:textSize="@dimen/fontsize_small" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>