<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ratings_main_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_frag_ratings_main_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/left_arrow_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_frag_ratings_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin_large"
            android:text="@string/ratings_main_title"
            android:textColor="@color/txtclr_black"
            android:textSize="@dimen/fontsize_normal"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/vertical_margin_normal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/rounded_gray_border_bg_white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_frag_ratings_main_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="45dp"
                            android:text="Name here"
                            android:textColor="@color/txtclr_black"
                            android:textSize="@dimen/fontsize_normal"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_frag_ratings_main_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="37 Years Old"
                            android:textColor="@color/txtclr_black"
                            android:textSize="@dimen/fontsize_normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/vertical_margin_small"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_frag_ratings_main_experience_level_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/experience_level"
                                android:textColor="@color/txtclr_black"
                                android:textSize="@dimen/fontsize_small" />

                            <TextView
                                android:id="@+id/tv_frag_ratings_main_experience_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="@string/experience_level_ambassador"
                                android:textColor="@color/txtclr_black"
                                android:textSize="@dimen/fontsize_small"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_frag_ratings_main_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="@dimen/vertical_margin_small"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod"
                            android:textAlignment="center"
                            android:textColor="@color/txtclr_black"
                            android:textSize="@dimen/fontsize_small" />

                        <LinearLayout
                            android:id="@+id/ll_frag_ratings_main_overview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_light_gray_radius_large_selector"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="@dimen/vertical_margin_small"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:gravity="center_vertical">

                            <com.idlestar.ratingstar.RatingStarView
                                android:id="@+id/rsv_frag_ratings_main_rating"
                                app:rsv_cornerRadius="2dp"
                                app:rsv_starMargin="3dp"
                                app:rsv_strokeWidth="2dp"
                                app:rsv_strokeColor="@color/txtclr_black"
                                app:rsv_starForegroundColor="@color/txtclr_black"
                                app:rsv_starBackgroundColor="@android:color/transparent"
                                app:rsv_starNum="5"
                                app:rsv_rating="4.7"
                                app:rsv_onlyHalfStar="false"
                                app:rsv_enableSelectRating="true"
                                app:rsv_drawStrokeForEmptyStar="true"
                                app:rsv_drawStrokeForHalfStar="true"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp" />

                            <TextView
                                android:id="@+id/tv_frag_ratings_main_rating"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="4.7/5-23 ratings"
                                android:textAlignment="center"
                                android:textColor="@color/txtclr_black"
                                android:textSize="@dimen/fontsize_small"
                                android:textStyle="bold"/>

                            <ImageView
                                android:id="@+id/iv_frag_ratings_main_ratings_more"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="5dp"
                                android:src="@drawable/right_arrow_black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_frag_ratings_main_verify_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/vertical_margin_normal"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_frag_ratings_main_verify_phone_status"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_check_green"/>

                            <TextView
                                android:id="@+id/tv_frag_ratings_main_verify_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/verify_phone_number"
                                android:textAlignment="center"
                                android:textColor="@color/txtclr_black"
                                android:textSize="@dimen/fontsize_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_frag_ratings_main_verify_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/vertical_margin_small"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_frag_ratings_main_verify_email_status"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_check_green"/>

                            <TextView
                                android:id="@+id/tv_frag_ratings_main_verify_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/verify_email_status"
                                android:textAlignment="center"
                                android:textColor="@color/txtclr_black"
                                android:textSize="@dimen/fontsize_small" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/iv_frag_ratings_main_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/dummy_avatar"
                        app:civ_border_color="@color/cyan_light"
                        app:civ_border_width="3dp" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>