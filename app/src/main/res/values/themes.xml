<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Goby24" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Goby24.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="SpinnerThemeWithTransparentBg" parent="android:Widget.Spinner">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerThemeWithCorner" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner_corner</item>
    </style>

    <style name="SpinnerThemeLarge" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner_large</item>
    </style>

    <style name="SpinnerThemeSmallText" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textSize">@dimen/fontsize_small</item>
    </style>

    <style name="SpinnerThemeSmallGrayText" parent="SpinnerThemeSmallText">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textSize">@dimen/fontsize_small</item>
        <item name="android:textColor">@color/txtclr_black</item>
    </style>

    <style name="CustomTheme" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/RadioButton</item>
    </style>
    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_selector_cyan</item>
    </style>
</resources>